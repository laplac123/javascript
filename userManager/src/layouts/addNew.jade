form.form-horizontal.addNew
	.p#input-userId.invisible
	.form-group
		label(for="input-fisrtName").control-label.col-xs-3 First Name
		.col-xs-6
			input(type="text", id="input-firstName", placeholder="Input First Name Here", required).form-control
	.form-group
		label(for="input-lateName").control-label.col-xs-3 Last Name
		.col-xs-6
			input(type="text", id="input-lastName", placeholder="Input Last Name Here", required).form-control
	.form-group
		label(for="input-address").control-label.col-xs-3 Address
		.col-xs-6
			input(type="text", id="input-address", placeholder="Input Address Here", required).form-control
	.form-group
		label(for="input-email").control-label.col-xs-3 Email
		.col-xs-6
			input(type="email", id="input-email", placeholder="Input Email Address Here", required).form-control
	.form-group
		label(for="input-phoneNumber").control-label.col-xs-3 Phone Number
		.col-xs-6
			input(type="tel", id="input-phoneNumber", placeholder="Input Phone Number Here", required).form-control
	.form-group
		.col-xs-offset-3.col-xs-6.text-right
					button(type="submit").btn.btn-default#addBtn
						span.glyphicon.glyphicon-ok
						|  Add
					button(type="button").btn.btn-default#editBtn.hidden
						span.glyphicon.glyphicon-edit
						|  Edit
					button(type="button").btn.btn-default#cancelBtn
						span.glyphicon.glyphicon-remove
						|  Cancel